<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.encore.coindata.CoinDailyMapper">

<!-- 조회, id: coinlist , 리턴: CoinVO -->
<select id="getAllData" resultType="com.encore.coindata.CoinDailyVO">
SELECT * FROM coin_daily
</select> 

<insert id="insert" parameterType="com.encore.coindata.CoinDailyVO">
INSERT INTO coin_daily(market,candle_date_time_utc,candle_date_time_kst,opening_price,high_price,low_price,trade_price,timestamp_,candle_acc_trade_price,candle_acc_trade_volume,prev_closing_price,
change_price,change_rate)
VALUES(#{market},#{candle_date_time_utc},#{candle_date_time_kst},#{opening_price},#{high_price},#{low_price},#{trade_price},#{timestamp_},#{candle_acc_trade_price},#{candle_acc_trade_volume},#{prev_closing_price},
#{change_price},#{change_rate})
</insert>

<select id="getCoincycle" parameterType="String" resultType="Map">
select count(*)
from coin_daily
where change_rate >= 0.10 
and market LIKE #{market};
</select>

<select id="getTodayCoin" parameterType="String" resultType="com.encore.coindata.CoinDailyVO">
select *
from coin_daily
where candle_date_time_kst LIKE #{today};
</select>

